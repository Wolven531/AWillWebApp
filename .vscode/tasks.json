{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "process",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/AWillWebApp/AWillWebApp.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run dotnet app",
			"type": "process",
			"command": "dotnet",
			"args": [
				"run",
				"-p",
				"${workspaceFolder}/AWillWebApp/AWillWebApp.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run webpack watcher",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"webpack-watch",
				"--prefix",
				"${workspaceFolder}/AWillWebApp/ClientApp/"
			],
			"problemMatcher": []
		},
		{
			"label": "Get C# Code Coverage",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/AWillWebApp.Tests/"
			},
			"command": "dotnet test /p:CollectCoverage=true /p:CoverletOutputFormat=\"opencover\"",
			"problemMatcher": []
		},
		{
			"label": "Convert coverage to report",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/AWillWebApp.Tests/"
			},
			"command": "reportgenerator \"-reports:coverage.opencover.xml\" \"-targetdir:coverage-reports\" \"-historydir:coverage-reports-historical\" \"-reporttypes:HTML;HTMLSummary;HTMLChart\"",
			"problemMatcher": []
		},
		{
			"label": "View coverage report in Firefox Developer Edition",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/AWillWebApp.Tests/"
			},
			"osx": {
				"command": "open -a /Applications/FirefoxDeveloperEdition.app \"coverage-reports/index.htm\""
			},
			"windows": {
				"command": "explorer coverage-reports\\index.htm"
			},
			"problemMatcher": []
		}
	]
}
