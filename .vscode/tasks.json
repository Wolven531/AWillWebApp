{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "process",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/AWillWebApp/AWillWebApp.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run dotnet app",
			"type": "process",
			"command": "dotnet",
			"args": [
				"run",
				"-p",
				"${workspaceFolder}/AWillWebApp/AWillWebApp.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run webpack watcher",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"webpack-watch",
				"--prefix",
				"${workspaceFolder}/AWillWebApp/ClientApp/"
			],
			"problemMatcher": []
		}
	]
}
