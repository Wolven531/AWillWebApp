{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"arrow-parens": [true, "ban-single-arg-parens"],
		"indent": [true, "tabs", 4],
		"no-console": [false],
		"quotemark": [true, "single", "jsx-double"],
		"semicolon": [true, "never"],
		"trailing-comma": [true, {
			"multiline": "never",
			"singleline": "never"
		}]
	},
	"rulesDirectory": []
}
